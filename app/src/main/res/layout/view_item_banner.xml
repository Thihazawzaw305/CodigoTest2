<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBannerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/placeholder_st_image"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBannerMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Stranger Thing\nRelease now"
        android:textSize="@dimen/text_heading_1x"
        android:textStyle="bold"
        android:elevation="@dimen/margin_small"
        android:textColor="@color/white"
        android:padding="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_large"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_banner" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/margin_xxlarge"
        android:layout_height="@dimen/margin_xxlarge"
        app:cornerRadius="@dimen/margin_large"
        app:icon="@drawable/ic_baseline_play_arrow_24_black"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorAccent"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"/>

</RelativeLayout>